{
    "name": "{{ application.repository }}",
    "description": "{{ application.description }}",
    "keywords": [
        "php",
        "application",
        "slytherin"
    ],
    "homepage": "{{ application.homepage }}",
    "license": "{{ application.license }}",
    "authors": [
        {
            "name": "{{ author.name }}",
            "email": "{{ author.email }}",
            "homepage": "{{ author.homepage }}",
            "role": "{{ author.role }}"
        }
    ],
    "require": {
        "container-interop/container-interop": "~1.1",
        "doctrine/orm": "~2.5",
        "filp/whoops": "~2.0",
        "hassankhan/config": "~0.8",
        "jms/serializer": "~1.0",
        "nesbot/carbon": "~1.2",
        "pagerfanta/pagerfanta": "~1.0",
        "robmorgan/phinx": "~0.6",
        "rougin/slytherin": "dev-master",
        "twig/twig": "~1.2",
        "vlucas/phpdotenv": "~2.2",
        "vlucas/valitron": "~1.2",
        "zendframework/zend-diactoros": "~1.3",
        "zendframework/zend-stratigility": "~1.2",
        "tebru/multi-array": "~0.2",
        "rougin/loream-authsum": "dev-master"
    },
    "require-dev": {
        "phpunit/phpunit" : "4.*",
        "rougin/weasley": "dev-master",
        "scrutinizer/ocular": "~1.1",
        "symfony/console": "~2.8",
        "symfony/yaml": "~2.8"
    },
    "autoload": {
        "psr-4": {
            "{{ application.name }}\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "{{ application.name }}\\": "tests/"
        }
    },
    "scripts": {
        "test": "phpunit"
    }
}
