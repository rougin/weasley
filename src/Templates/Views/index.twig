{% extends 'layouts/master.twig' %}

{% block content %}
  <h1><i class="icon ion-person-stalker"></i> {pluralTitle}</h1>

  <div class="container-btn">
    <a href="{{ '/{plural}/create' | url }}" class="btn btn-primary">
      <i class="icon ion-plus"></i> Create New
    </a>
  </div>

  <div class="panel panel-default">
    <div class="panel-heading">Item/s</div>
    <table class="table table-striped table-hover">
      <thead>
        <tr>
          {tableHeading}
        </tr>
      </thead>
      <tbody>
        {% for item in items %}
          <tr>
            {tableBody}
          </tr>
        {% endfor %}
      </tbody>
    </table>
  </div>

  {{ links | raw }}
{% endblock %}