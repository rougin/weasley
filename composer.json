    "require": {
        "php": ">=5.3.0",
        "http-interop/http-middleware": "^0.4.1",
        "rougin/slytherin": "~0.9",
        "symfony/console": "~2.8",
        "vlucas/valitron": "~1.0"
    },
    "require-dev": {
        "phpunit/phpunit": "~4.2",
        "scrutinizer/ocular": "~1.1"
