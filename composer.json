    "keywords": ["helper", "generator", "slytherin", "workflow", "weasley"],
    "homepage": "https://github.com/rougin/weasley",
    "license": "MIT",
    "authors": [
        {
            "name": "Rougin Royce Gutib",
            "email": "rougingutib@gmail.com",
